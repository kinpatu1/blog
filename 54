        return Alexa.getRequestType(handlerInput.requestEnvelope) === 'IntentRequest'
            && Alexa.getIntentName(handlerInput.requestEnvelope) === 'studyIntent';
    },
    handle(handlerInput) {
        const speakOutput = "ä½•æ™‚é–“å‹‰å¼·ã—ã¾ã—ãŸã‹ï¼Ÿ";

