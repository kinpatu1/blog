const Alexa = require('ask-sdk-core');
const persistenceAdapter = require('ask-sdk-s3-persistence-adapter');
const LaunchRequestHandler = {
    canHandle(handlerInput) {
        return Alexa.getRequestType(handlerInput.requestEnvelope) === 'LaunchRequest';
    },
    async handle(handlerInput) {

        // ç™»éŒ²æ—¥
        var today = new Date(); 
        today = new Date(today.getFullYear(), today.getMonth(), today.getDate(), 0, 0, 0); 
        // let today1 = today.toString();

        let format = {
            "ç™»éŒ²æ—¥":{
                "register":`Sun Aug 09 2020 00:00:00 GMT+0000 (Coordinated Universal Time)`
            },
            "é”æˆæ•°":{
                "achievement":"0"
            },
            "ãƒãƒ«ãƒ":{
                "task":`0`
            }
        };
        
        // ã‚¢ãƒˆãƒªãƒ“ãƒ¥ãƒ¼ãƒˆã‚’èª­ã¿è¾¼ã‚€ãƒãƒ³ãƒ‰ãƒ©ãƒ¼
        const attributesManager = handlerInput.attributesManager;
        let s3Attributes = await attributesManager.getPersistentAttributes() ;
        
        // åˆå›ãƒ­ã‚°ã‚¤ãƒ³æ™‚ã®ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆä½œæˆ
        if(s3Attributes["é”æˆæ•°"] ){
        }else{
            s3Attributes = format;
        }

        // ã„ã¤ã¶ã‚Šã®ãƒ­ã‚°ã‚¤ãƒ³ã‹è¨ˆç®—
        /* ä»Šå›ãƒ­ã‚°ã‚¤ãƒ³æ—¥ */
        today = new Date(today.getFullYear(), today.getMonth(), today.getDate(), 0, 0, 0); 
        /* ç™»éŒ²æ—¥ */
        var dateStart = new Date(s3Attributes["ç™»éŒ²æ—¥"]["register"]);
        /* ã„ã¤æŒ¯ã‚Šã‹è¡¨ç¤º */
        var msecDiff = today.getTime() - dateStart.getTime();
        var dayDiff = Math.floor(msecDiff / 1000 / 60 / 60 / 24);
        let dayDiff2 = (parseInt(dayDiff,10) * 3);

        // ã‚¢ãƒˆãƒªãƒ“ãƒ¥ãƒ¼ãƒˆã‚’ä¿å­˜ã™ã‚‹ãƒãƒ³ãƒ‰ãƒ©ãƒ¼
        s3Attributes["ãƒãƒ«ãƒ"]["task"] = dayDiff2;
        attributesManager.setPersistentAttributes(s3Attributes);
        await attributesManager.savePersistentAttributes();

        const speakOutput = "æ™‚é–“å ±å‘Šã‹ç›®æ¨™ç®¡ç†ã©ã¡ã‚‰ã‚’é–‹ãã¾ã™ã‹ï¼Ÿ";

        return handlerInput.responseBuilder
            .speak(speakOutput)
            .reprompt(speakOutput)
            .getResponse();
    }
};
const launchIntentHandler = {
    canHandle(handlerInput) {
        return Alexa.getRequestType(handlerInput.requestEnvelope) === 'IntentRequest'
            && Alexa.getIntentName(handlerInput.requestEnvelope) === 'launchIntent';
    },
    handle(handlerInput) {
        const speakOutput = "å‹‰å¼·æ™‚é–“å ±å‘Šã‹ç›®æ¨™ç®¡ç†ã©ã¡ã‚‰ã‚’é–‹ãã¾ã™ã‹ï¼Ÿ";

        return handlerInput.responseBuilder
            .speak(speakOutput)
            .reprompt(speakOutput)
            .getResponse();
    }
};
const studyIntentHandler = {
